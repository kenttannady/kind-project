apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
 name: http-echo-ingress
 namespace: default
spec:
 rules:
 - host: apps1.moneyhero.com
   http:
      paths:
      - path: /foo
        pathType: Prefix
        backend:
          service:
            name: http-echo-foo
            port:
              number: 80
      - path: /bar
        pathType: Prefix
        backend:
          service:
            name: http-echo-bar
            port:
              number: 80